image_tag = "quay.io/ssorj/trade-zoo-frontend"

@command
def build_image(app):
    with working_dir(".."):
        run("plano build")

    run(f"podman build -t {image_tag} .")

@command
def run_image(app):
    build_image(app)
    run(f"podman run --net host {image_tag}")

@command
def push_image(app):
    build_image(app)
    run(f"podman push {image_tag}")
