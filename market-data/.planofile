image_tag = "quay.io/ssorj/trade-zoo-market-data"

@command
def build(app):
    with working_dir(".."):
        run("plano build")

    run(f"podman build -t {image_tag} .")

@command
def run_(app):
    build(app)
    run(f"podman run --net host {image_tag}")

@command
def push(app):
    build(app)
    run(f"podman push {image_tag}")
